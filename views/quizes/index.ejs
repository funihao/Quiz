<div class="column">
<form method="get" action="/quizes?search=search">
  Buscar pregunta
  <input type="text" name="search" placeholder="texto a buscar" value="">
  <input type="submit" value="Enviar">
</form>
<a href="/quizes/new">
  <button class="btn" type="button">Crear pregunta</button>
</a>
</div>
<div class="column">
<table class="tx-left">
  <% var i; for (i=0; i < quizes.length; i++) {%>
    <tr>
      <td><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].pregunta %></a></td>
      <td class="tx-normal"><a href="quizes/<%= quizes[i].id %>"><%= quizes[i].tema %></a></td>
      <% if (session.user) { %>
      <td><a href="quizes/<%= quizes[i].id %>/edit"><button>editar</button></a></td>
      <td>
        <form method="post" action="quizes/<%= quizes[i].id %>?_method=delete">
          <button type="submit" onClick="return confirm('Borrar: <%= quizes[i].pregunta %>');">
            borrar
          </button>
        <% } %>
        </form>
      </td>
    </tr>
  <% } %>
</table>
</div>
